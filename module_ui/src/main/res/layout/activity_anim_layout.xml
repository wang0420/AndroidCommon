<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loading_common.json"
        app:lottie_loop="true"
        tools:ignore="MissingConstraints" />


    <!-- <com.module.ui.widget.favor.FavorWidget2
         android:id="@+id/favor"
         android:layout_width="55dp"
         android:layout_height="match_parent"
         android:layout_gravity="right|bottom"
         android:background="@color/transparent"
         app:layout_constraintLeft_toRightOf="@+id/animation_view"
         tools:ignore="MissingConstraints" />-->


    <me.yifeiyuan.library.PeriscopeLayout
        android:id="@+id/periscope"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:background="#d2d2c9"
        android:text="Hello World!"
        app:layout_constraintLeft_toRightOf="@+id/animation_view" />

    <com.module.ui.widget.favor.FavorWidget2
        android:id="@+id/favor_widget"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        app:layout_constraintLeft_toRightOf="@+id/periscope" />

</LinearLayout>