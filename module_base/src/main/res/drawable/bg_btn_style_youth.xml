<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF4C82"/>
            <corners android:radius="100dp"/>
        </shape>
    </item>
    <item android:left="50dp">
        <shape android:shape="rectangle">
            <corners android:radius="100dp"/>
            <gradient
                android:startColor="#7B4CFC"
                android:endColor="#FF4C82"
                android:angle="-90"/>
        </shape>
    </item>
    <item
        android:right="5dp"
        android:left="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#391F4D"/>
            <corners android:radius="100dp"/>
        </shape>
    </item>

</layer-list>
