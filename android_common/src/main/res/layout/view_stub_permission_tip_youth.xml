<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:parentTag="android.widget.RelativeLayout">

    <LinearLayout
        android:id="@+id/llPermissionPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:background="@drawable/bg_permission_style_white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="14dp">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/llPermissionPanel"
            android:layout_alignRight="@id/llPermissionPanel"
            android:layout_gravity="right"
            android:layout_marginRight="26dp"
            android:background="@drawable/ic_close_style_youth" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:textColor="#ff000000"
            android:textSize="18sp"
            tools:text="xx需要下列权限才可正常使用"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lvConcretePermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="30dp"
            android:divider="@null"
            android:scrollbars="none"
            />

        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/bg_btn_style_youth"
            android:gravity="center"
            android:text="一键开启"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

</merge>