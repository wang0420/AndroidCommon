<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="18dp"
                android:height="18dp"/>
            <solid android:color="#66ff8162"/>
            <corners android:radius="9dp"/>
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#fe7979"/>
            <corners android:radius="7dp"/>
        </shape>
    </item>
</layer-list>