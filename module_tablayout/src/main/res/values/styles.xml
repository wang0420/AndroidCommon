<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sure_blue</item>
        <item name="colorPrimaryDark">@color/sure_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/layout_backgroung</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>


    <style name="bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="transparentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="ToolBarTitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <declare-styleable name="TabLayoutIndicator">
        <attr format="dimension|reference" name="indicator_width"/>
        <attr format="color|reference" name="indicator_color"/>
        <attr format="reference" name="indicator_drawable"/>
        <attr format="boolean" name="indicator_can_anim"/>
        <attr format="boolean" name="indicator_match_title_width"/>
        <attr format="float" name="indicator_scale"/>
    </declare-styleable>


    <declare-styleable name="TabLayoutTitle">
        <attr format="color|reference" name="title_normal_color"/>
        <attr format="color|reference" name="title_select_color"/>
        <attr format="boolean" name="title_is_Bold"/>
        <attr format="boolean" name="title_only_select_Bold"/>
        <attr format="integer" name="title_text_normal_size"/>
        <attr format="integer" name="title_text_select_size"/>
        <attr format="integer" name="title_anim_mode">
            <enum name="START" value="0"/>
            <enum name="MIDDLE" value="1"/>
        </attr>

        <attr format="dimension|reference" name="title_indicator_width"/>
        <attr format="dimension|reference" name="title_indicator_height"/>
        <attr format="color|reference" name="title_indicator_color"/>
        <attr format="reference" name="title_indicator_drawable"/>
    </declare-styleable>

</resources>
